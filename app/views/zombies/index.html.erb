<table class="table table-striped table-bordered table-condensed">
  <thead><h2 class="text-center">Listing all Zombies</h2>
  <tr>	  
    <td class="bold">ID</td>
  	<td class="bold">Name</td>
  	<td class="bold">Home</td>
  	<td class="bold">Action</td>
  </tr>
  </thead>
  
  <tbody>
  <% Zombie.all.each do |zombie| %>
  <tr>
    <td><%= zombie.id %></td>
    <td><%= link_to zombie.name, zombie %></td>
  	<td><%= zombie.home %></td>  	
  	<td><%= button_to zombie, method: :delete, :confirm => "Are you sure?", :class => "btn btn-danger" do %>
  	      Delete
          <%= content_tag(:span, "", :class => "glyphicon glyphicon-trash") %>
  	    <% end %>
  	</td>    	
  </tr>   
  <% end %>
  
  
</tbody>
<tfoot>
  <tr><td colspan=0>
    <%= button_to "Create new", new_zombie_path, :method=>:get, :class => 'btn btn-success'%>    
  </td></tr>
</tfoot>
</table>
